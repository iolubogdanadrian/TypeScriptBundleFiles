<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <BundleOnBuild>true</BundleOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Karambolo.AspNetCore.Bundling.EcmaScript" Version="3.8.1" />
    <PackageReference Include="Karambolo.AspNetCore.Bundling.WebMarkupMin" Version="3.8.1" />
    <PackageReference Include="Microsoft.TypeScript.MSBuild" Version="5.4.4">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="wwwroot\ts\Services\" />
  </ItemGroup>

</Project>
